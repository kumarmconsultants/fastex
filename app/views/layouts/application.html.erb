<!DOCTYPE html>
<html>
  <head>
    <title>FastEx Logistics International</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="brand">FastEx Logistics International</div>
    <div class="address-bar">The Plaza | 1555 Cottage Pl. | Montgomery, Alabama, 36101 | 206-333-0853</div>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">FastEx Logistics International</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li>
                    <%= link_to 'Home', root_path %>
                    </li>
                    <li>
                    <%= link_to 'About Us', about_path %>
                    </li>
                    <li>
                    <%= link_to 'Track Package', track_path %>
                    </li>
                    <li>
                    <%= link_to 'Contact Us', contact_path %>
                    </li>
                    <% if user_signed_in? %>
                    <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
                    <li><%= link_to 'Shipments', shipments_path %></li>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
        <%= yield %>
        <p class="notice"><%= notice %></p>
         <p class="alert"><%= alert %></p>

         <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; FastEx Logistics International</em></p>
                </div>
            </div>
        </div>
    </footer>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>
    // Activates the Carousel
    $('.carousel').carousel({
        interval: 5000
    })
    </script>
  </body>
  
</html>
